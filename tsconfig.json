{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "noImplicitAny": false,
      "strictNullChecks": false,
      "strictPropertyInitialization": false,
      "strictBindCallApply": false,
      "strictFunctionTypes": false
    }
  }